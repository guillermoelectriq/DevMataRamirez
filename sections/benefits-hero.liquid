<link rel="preload" href="{{ 'index.css' | asset_url }}" as="style">
<script rel="preload" src="{{ 'index.js' | asset_url }}" as="script"></script>

{{ 'health-benefits-lp.css' | asset_url | stylesheet_tag }}

<div class="hb-hero">
    <img class="hb-hero__bg hide__desktop" src="{{ section.settings.bg_image_mb | img_url: 'master' }}">
    <div class="hb-content__wrapper">
      <div class="hb-content" style="background-color: {{ section.settings.bg_color }};">
          <h1 class="hb-content__header">{{ section.settings.heading }}</h1>
          <p class="hb-content__description">{{ section.settings.description }}</p>
      </div>
    </div>
</div>

<style>
.hb-hero {
    width: 100%;
}
.hb-hero__bg {
    width: 100%;
    height: auto;
}
.hb-content {
    width: 100%;
    margin: 0 auto;
    padding: 32px 20px;
    border: 4px solid #000;
}
.hb-content__header {
    font-family: Apercu;
    font-size: 24px;
    font-weight: 700;
    color: #221F20;
    margin-bottom: 8px;
}
.hb-content__description {
    font-family: Apercu;
    font-size: 18px;
    line-height: 1.3;
    color: #221F20;
}
@media screen and (min-width: 768px){
    .hb-hero {
        display: flex;
        align-items: center;
        width: 100%;
        height: 546px;
        background-image: url({{ section.settings.bg_image | img_url: 'master' }});
        background-position: center;
        background-size: cover;
        padding-left: 10%;
    }
    .hb-content__wrapper {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
    }
    .hb-content {
        margin-left: 0;
        max-width: 595px;
        padding: 72px 50px;
    }
    .hb-content__header {
        font-size: 40px;
        margin-bottom: 12px;
    }
    .hide__desktop {
        display: none;
    }
}
@media screen and (min-width: 1350px){
  .hb-hero {
        padding-left: 0;
    }
}
</style>

{% schema %}
{
  "name": "Benefits Hero",
  "settings": [
    {
      "type": "header",
      "content": "Hero - Content"
    },
    {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image (Desktop)"
    },
    {
        "type": "image_picker",
        "id": "bg_image_mb",
        "label": "Background Image (Mobile)"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Header"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#b1d6b4",
      "info": "Background color for content"
    }
  ],
  "presets": [
    {
      "name": "Benefits Hero",
      "category": "Hero"
    }
  ]
}
{% endschema %}
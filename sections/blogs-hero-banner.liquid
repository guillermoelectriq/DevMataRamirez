{{ 'blogs-hero-banner.css' | asset_url | stylesheet_tag }}

<div class="blogs-hero-banner__container">
    <div class="blogs-hero-banner__text-content-wrapper">
        <div class="blogs-hero-banner__text-content">
            <h1>{{ section.settings.header }}</h1>
            <p>{{ section.settings.paragraph }}</p>
            <a href="{{ section.settings.button_link }}">
                {{ section.settings.button_text }}
            </a>
        </div>
    </div>
</div>

<div class="blogs-hero-banner__container-mb">
    <div class="blogs-hero-banner__img-container">
        <img src="{{ section.settings.bg_image | img_url: 'master' }}">
    </div>
    <div class="blogs-hero-banner__text-content">
        <h1>{{ section.settings.header }}</h1>
        <p>{{ section.settings.paragraph }}</p>
        <a href="{{ section.settings.button_link }}">
            {{ section.settings.button_text }}
        </a>
    </div>
</div>

<style>
    .blogs-hero-banner__container {
        background-image: url({{ section.settings.bg_image | img_url: 'master' }});
        background-size: cover;
        background-position: center;
        height: 551px;
        width: 100%;
        display: flex;
        align-items: center;
    }
</style>

{% schema %}
{
    "name": "Blogs: Hero",
    "settings": [
        {
            "id": "bg_image",
            "type": "image_picker", 
            "label": "Backgreound Image"
        },
        {
            "id": "header", 
            "type": "text", 
            "label": "Header"
        },
        {
            "id": "paragraph", 
            "type": "text", 
            "label": "Description"
        },
        {
            "id": "button_text", 
            "type": "text", 
            "label": "Button Text"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        }
    ],
    "presets": [
    {
        "name": "Blogs: Hero",
        "category": "ADVANCED LAYOUT"
    }
    ]
}
{% endschema %}